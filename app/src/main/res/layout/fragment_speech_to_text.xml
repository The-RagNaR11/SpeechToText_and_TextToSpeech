<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@color/background_secondary">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/speech_to_text"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#2C3E50"
        android:layout_marginBottom="32dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/textViewStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tap_microphone_to_start"
        android:textSize="16sp"
        android:textColor="@color/color_error"
        android:layout_marginBottom="24dp"
        android:gravity="center" />

    <Button
        android:id="@+id/btnMicrophone"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="@string/min_symbol"
        android:textSize="40sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/rounded_circle_button"
        android:backgroundTint="#27AE60"
        android:elevation="8dp"
        android:layout_marginBottom="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recognized_text"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textViewResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/your_speech_will_appear_here"
            android:textSize="16sp"
            android:textColor="#34495E"
            android:padding="16dp"
            android:background="@drawable/rounded_textview"
            android:minHeight="100dp"
            android:gravity="top|start" />

    </ScrollView>

</LinearLayout>